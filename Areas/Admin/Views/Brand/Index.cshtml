@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Danh sách thương hiệu sản phẩm ";
}
<h2>Danh sách thương hiệu sản phẩm</h2>
<a asp-action="Create" class="btn btn-info btn-sm" asp-controller="Brand">Thêm thương hiệu</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên thương hiệu</th>
            <th scope="col">Mô tả thương hiệu</th>
            <th scope="col">Trạng thái thương hiệu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brand" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Brand" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
