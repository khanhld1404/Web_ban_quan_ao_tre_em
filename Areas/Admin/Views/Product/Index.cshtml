@model IEnumerable<ProductModel>
@{
	ViewData["title"] = "Danh sách sản phẩm";
}
<h2>Danh sách sản phẩm</h2>
<a asp-action ="Create" class="btn btn-info btn-sm" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ảnh sản phẩm</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả sản phẩm</th>
            <th scope="col">Giá sản phẩm</th>
            <th scope="col">Danh mục sản phẩm</th>
            <th scope="col">Thương hiệu sản phẩm</th>
            <th scope="col">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <th scope="row">@item.Id</th>
                <td><img src="~/media/products/@item.Image" width="100" height="80" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
